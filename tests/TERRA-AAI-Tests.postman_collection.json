		{
			"name": "Exchange Token - user @ clientA for clientB",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {\r",
							"    pm.test(\"Successfully exchanged user access token\", () => {\r",
							"        pm.expect(pm.response.code).to.eql(200);\r",
							"    });\r",
							"\r",
							"    var resp = pm.response.json();\r",
							"\r",
							"    pm.collectionVariables.set(\"userAToBAccessToken\", resp.access_token);\r",
							"}\r",
							"else {\r",
							"    pm.test(\"Failed to exchange user access token\", () => {\r",
							"        pm.expect(pm.response.code).to.eql(200);\r",
							"    })\r",
							"    pm.execution.setNextRequest(null);\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"var keys = pm.environment.get(\"clientId-A\") + \":\" + pm.environment.get(\"clientSecret-A\");\r",
							"var encodedKeys = CryptoJS.enc.Base64.stringify(CryptoJS.enc.Utf8.parse(keys));\r",
							"\r",
							"pm.collectionVariables.set(\"clientBasicAuth-A\", encodedKeys);\r",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Basic {{clientBasicAuth-A}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "grant_type",
							"value": "urn:ietf:params:oauth:grant-type:token-exchange",
							"type": "text"
						},
						{
							"key": "subject_token",
							"value": "{{userToAAccessToken}}",
							"type": "text"
						},
						{
							"key": "subject_token_type",
							"value": "urn:ietf:params:oauth:token-type:access_token",
							"type": "text"
						},
						{
							"key": "requested_token_type",
							"value": "urn:ietf:params:oauth:token-type:access_token",
							"type": "text"
						},
